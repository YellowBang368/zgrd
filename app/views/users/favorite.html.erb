<div class="favorite container">
  <section class="cards">
    <% current_user.favorite.each do |prd| %>
    <% pr = Product.find(prd) %>
    <article class="card">
      <%= image_tag pr.avatar.url %>
      <div class="description">
        <h5>
          <%= pr.name %>
        </h5>
        <p class="text"><%= pr.description %></p>
        <h3 class="price" ><%= pr.price %>$</h3>
      </div>
    </article>
    <% end %>
  </section>
</div>
