<head>
  <script type="text/javascript">
    $(document).ready(function(){
      $('.post-comments').hide();
      $(".open-user-comments").click(function(){
        $(".post-products").hide();
        $(".post-comments").show();
      });

      $(".open-user-products").click(function(){
        $(".post-comments").hide();
        $(".post-products").show();
      });

    });

    $(document).ready(function(){
      $(".post-products-row").hide();
      $(".open-products-column").click(function(){
        $(".post-products-row").hide();
        $(".post-products-column").show();
      });
      $(".open-products-row").click(function(){
        $(".post-products-column").hide();
        $(".post-products-row").show();
      });
    });
  </script>
</head>
<div class="profile">
  <div class="container">
    <div class="row">
      <div class="col-sm-9">
        <div class="user-window">

          <div class="post-products">
            <div class="upside-menu">
              <ul class="choose-products-view">
                <li class="open-products-column"><i class="fas fa-align-justify"></i></li>
                <li class="open-products-row"><i class="fas fa-th-large"></i></li>
              </ul>
              <% if current_user.present? && current_user == @user %>
                 <%= button_to new_product_path, class: "add-new-product", method: :get do %>
                  Добавить<i class="fas fa-plus"></i>
                 <% end %>
              <% end %>

            </div>

            <div class="post-products-column">
              <%= render partial: "post-products-column" %>
            </div>
            <div class="post-products-row">
              <%= render partial: "post-products-row" %>
            </div>
          </div>

          <div class="post-comments">
            sdf
            <%= render partial: "post-comments" %>
          </div>

        </div>
      </div>
      <div class="col-sm-3">
        <div class="upside-menu">

        </div>
        <% if current_user.present? %>
          <% if current_user == @user %>
            <button class="btn btn-green btn-sticky-bottom no-margin"><i class="fas fa-pencil-alt"></i>Редактировать</button>
          <% else %>
            <button class="btn btn-green btn-sticky-bottom no-margin">Написать</button>
          <% end %>
        <% end %>
        <div class="user-block">
          <%= image_tag puts_avatar(@user) %>
          <p class="user-name"><%= @user.first_name + " " + @user.last_name %></p>
          <p class="user-status">
            <%= puts_status(@user) %>
            <%= image_tag puts_confirmed(@user), class: "confirmed tooltip-hover" %>
          </p>
          <ul class="user-menu">
            <li class="open-user-products"><p>Объявления</p></li>
            <li class="open-user-comments"><p>Отзывы</p></li>
          </ul>
        </div>
        <% if current_user.present? && current_user.id != @user.id %>
          <button class="btn btn-red btn-sticky-top">Пожаловаться</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
