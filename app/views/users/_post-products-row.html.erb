<section class="cards">
  <% @user.products.each do |pr| %>
    <article class="card" style="flex: 0 1 32%">
      <%= image_tag pr.avatar.url %>
      <div class="description">
        <h5>
          <%= pr.name %>
        </h5>
        <p class="text"><%= pr.description %></p>
        <h3 class="price" ><%= pr.price %>$</h3>
      </div>
    </article>
  <% end %>
  <% if @user.products.count % 3 == 2 #На последней строке прибиваем тоавры к левой стороне %>
    <article class="card empty-card">
      <img />
    </article>
  <% end %>
  <% if @user.products.count % 3 == 1 %>
    <article class="card empty-card">
      <img width="264px" />
    </article>
    <article class="card empty-card">
      <img width="264px" />
    </article>
  <% end %>
</section>
