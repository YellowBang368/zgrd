<div class="devise-form new-estate">
  <h2>Новый поселок</h2>

  <%= form_for @estate do |f| %>

  <p>Название</p>
  <%= f.text_field :title %><br/>

  <p>Описание</p>
  <%= f.text_field :description %><br/>

  <p>Класс</p>
  <%= f.text_field :estate_class %><br/>

  <p>Инфраструктура</p>
  <%= f.text_field :facilities, multiple: true %><br/>

  <%= f.fields_for :product_attachments do |p| %>
    <div class="field">
      <%= p.file_field :gallery, :multiple => true, name: "product_attachments[gallery][]" %>
    </div>
  <% end %>

  <p>Участки</p>
  <% f.collection_check_boxes(:product_ids, @products, :id, :name) do |b| %>
    <%= b.label { b.check_box } %></br>
  <% end %>

  <%= f.submit %>
  <% end %>
</div>
