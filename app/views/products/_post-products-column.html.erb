<div class="container">
  <section class="cards">
    <% @index_products.each_with_index do |pr, index| %>
      <% if index < 2 %>
        <article class="card">
      <% else %>
        <article class="card revealator-slideup revealator-once">
      <% end %>
        <%= image_tag pr.avatar.url %>
        <div class="description">
          <h5>
            <%= pr.name %>
            <% if pr.hot %>
              <i class="fas fa-fire"></i>
            <% end %>
          </h5>
          <p class="text"><%= pr.description %></p>
          <h3 class="price" ><%= pr.price %>$</h3>
        </div>
      </article>
      <% end %>
    </section>
</div>
